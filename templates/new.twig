<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="{{ asset('css/style.css') }}" rel="stylesheet"/>

        <title>Smart-Dressing</title>
    </head>
    <body>
        {% include "header.twig" %} 

        <div class="new">
            <div class="columns">
                <div class="col">
                    <h1>Create new cloth</h1>
                    <form action="/create/cloth" class="form" method="post">
                        <div class="item name">
                            <label for="name">Name : </label>
                            <input type="text" name="name" id="name">
                        </div>

                        <div class="item category">
                            <label for="category">Category : </label>
                            <select name="category" id="category">
                                {% for category in categories %}
                                    <option value="{{category.name}}">{{category.name}}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="item color">
                            <label for="color">Color : </label>
                            <input type="text" name="color" id="color">
                        </div>

                        <div class="item fabric">
                            <label for="fabric">Fabric : </label>
                            <input type="text" name="fabric" id="fabric">
                        </div>

                        <div class="item quantity">
                            <label for="quantity">Quantity : </label>
                            <select name="quantity" id="quantity">
                                {% for quantity in range(1, 21) %}
                                    <option value="{{quantity}}">{{quantity}}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="send">
                            <input type="submit" class="button createCloth"></input>
                        </div>
                    </form>
                </div>

                <div class="col">
                    <h1>Create new category</h1>
                    <form action="/create/category" class="form" method="post">
                        <div class="item name">
                            <label for="name">Name : </label>
                            <input type="text" name="name" id="name">
                        </div>

                        <div class="item temperature">
                            <label for="temperature">Temperature : </label>
                            <select name="temperature" id="temperature">
                                <option value="-10">- 10</option>
                                <option value="-5">- 5</option>
                                <option value="0">0</option>
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                            </select>
                        </div>

                        <div class="item weather">
                            <label for="weather">Weather : </label>
                            <select name="weather" id="weather">
                                <option value="800">Sunny</option>
                                <option value="500">Rainy</option>
                                <option value="741">Foggy</option>
                                <option value="802">Cloudy</option>
                                <option value="200">Thunderstorm</option>
                                <option value="600">Snowy</option>
                            </select>
                        </div>

                        <div class="item rain">
                            <label for="rain">Rain/Snow level : </label>
                            <select name="rain" id="rain">
                                <option value="0">None</option>
                                <option value="300">Drizzel</option>
                                <option value="501">Medium</option>
                                <option value="502">Heavy</option>
                            </select>
                        </div>

                        <div class="send">
                            <input type="submit" class="button createCloth"></input>
                        </div>
                    </form>
                
                </div>

                <div class="col">
                    <h1>Category list</h1>

                    <div class="list">
                        {% for category in categories %}
                            <div class="category">
                                <div class="name">{{category.id}}- {{category.name}} : </div>
                                <div class="specs"> {{category.temperature}}Â°C - {{category.weather}} - {{category.rainLevel}} </div> 
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        <script>
        
        </script>
    </body>
</html>